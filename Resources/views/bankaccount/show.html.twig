{% extends '@MetalslaveFinancial/base.html.twig' %}

{% block body %}
    <h1>Bankaccount</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bankAccount.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bankAccount.name }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ bankAccount.amount | money_format}}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if bankAccount.createdAt %}{{ bankAccount.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if bankAccount.updatedAt %}{{ bankAccount.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bank_account_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bank_account_edit', { 'id': bankAccount.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
